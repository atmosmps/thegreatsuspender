{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "env": {
    "browser": true,
    "es6": true,
    "webextensions": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "rules": {
    "no-console": 0,
    "no-unused-vars": [
          "error",
      { "vars": "all", "args": "none", "ignoreRestSiblings": false }
    ],
    "no-undef": ["error"],
    "no-proto": ["error"],
    "prefer-spread": ["warn"],
    "padded-blocks": ["off", { "blocks": "never" }],
    "one-var": ["off", "never"],
    "spaced-comment": ["off", "always"]
  }
}
